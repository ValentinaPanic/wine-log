
<div class="container">
  <h5 align="center">Glossary of Wine Tasting Terms</h5>
  <br>
  <%= form_tag(glossary_path method: :get) do %>
    <%= render 'search' %>
  <% end %>
  <br>
  <dl>
    <% @terms.each do |t| %>
    <dt><%= t.term %></dt>
    <dd><%= t.definition %></dd>
      <% end %>
  </dl>
</div>

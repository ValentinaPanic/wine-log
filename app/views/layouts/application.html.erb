<!DOCTYPE html>
<html>
  <head>

    <title>WINELOG</title>
    <%= favicon_link_tag asset_path('favicon.png') %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- select2 links -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/js/select2.min.js"></script>
    <!-- bootstrap cdn link -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>


    <nav class="navbar navbar-dark" style="background-color: #220F24;">
      <a class="navbar-brand" href="/">WINELOG</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown" style="background-color: #220F24;">
        <ul class="navbar-nav">
          <li class="nav-item">
            <% if logged_in? %>
            <a class="nav-link" href="/home">Your homepage</a>
            <% end %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/aromas">List of Wine Aromas</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/glossary">Glossary of Tasting terms</a>
          </li>
          <li class="nav-item">
            <% if logged_in? %>
            <a class="nav-link" href="/countries">List of Wine Producing Countries</a>
            <% end %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
          <% unless logged_in? %>
          <li class="nav-item">
            <a class="nav-link" href="/signup">Signup</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login">Log in</a>
          </li>
          <% end %>
          <% if logged_in? %>
          <li class="nav-item">
            <a class="nav-link" data-method="delete" href="/logout">Logout</a>

          </li>
          <% end %>
        </ul>
      </div>
    </nav>


  <body>

    <%= yield %>


  <div class="footer" style="padding-top: 10px">

    <ul class="horizontal_menu">
      <% if logged_in? %>
    <li><%= link_to "Add a Wine", new_wine_path %></li><li><%= link_to "Countries", countries_path %></li>
    <li><%= link_to "Insights", insights_path %></li>
    <li><%= link_to "Your Cellar", home_path %></li>
    <li><%= link_to "Logout", logout_path, method: :delete%></li>
      <% end %>
    <li><%= link_to "Glossary", glossary_path %></li>
    <li><%= link_to "Aromas", aromas_path %></li>
    <li><%= link_to "About & Contact", about_path %></li>
    </ul>
  </div>


    <div id="fb-root"></div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.js" integrity="sha256-xLhce0FUawd11QSwrvXSwST0oHhOolNoH9cUXAcsIAg=" crossorigin="anonymous"></script>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.3&appId=327625804519036&autoLogAppEvents=1"></script>

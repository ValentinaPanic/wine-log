<%= flash[:error] %>

<%= form_for @user, url: '/login' do |f| %>
  <div class="form-group">
    <%= f.label :user_name %>
    <%= f.text_field :user_name %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <%= f.submit "Log In" %>
<% end %>

<%= link_to('Log in with Facebook!', '/auth/facebook') %>

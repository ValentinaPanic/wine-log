
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-modal/2.2.6/css/bootstrap-modal-bs3patch.css">
<div class="modal fade" role="dialog" id="myModal">
  <!-- show wine info -->

</div>

<div class="container">
  <div class="top-container">
  <h5 align="center"><b>All Wines</b></h5>
</div>
<input type="text" id="myInput" onkeyup="searchFunction()" placeholder="Search for wines...">

<div class="table-responsive">
  <table class="u-full-width">
  <thead class="table-head">
    <tr>
      <th scope="col" style="padding-left: 40px">Producer</th>
      <th scope="col">Name</th>
      <th scope="col">Vintage</th>
    </tr>
  </thead>
  <tbody id="wine-js" data-user-id="<%= @user.id %>">
        <!-- should show wines -->
  </tbody>
</table>
</div>
</div>
<div class="container">

<div class="top-container">
  <h5 align="center"><b>All Wines</b></h5>
</div>

<%= render partial: 'users/table', locals: {object: @user.wines} %>
<div class="top-container">
  <h5 align="center"><b>Favorite Wines</b></h5>
</div>
<%= render partial: 'users/table', locals: {object: @user.wines.is_favorite} %>
</div>
